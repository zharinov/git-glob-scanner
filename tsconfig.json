{
  "compilerOptions": {
    "composite": true,
    "strict": true,
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitAny": true,
    "target": "es2022",
    "module": "es2022",
    "noUnusedLocals": true,
    "noImplicitOverride": true,
    "useUnknownInCatchVariables": true,
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "declaration": true
  },
  "exclude": ["node_modules"]
}
