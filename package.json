{
  "name": "@jrnv/git-glob-scanner",
  "version": "1.0.1",
  "description": "Scan files inside directory respecting `.gitignore` and submodules",
  "repository": "git@github.com:zharinov/git-glob-scanner.git",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist target",
    "build": "ts-node-esm build.mts",
    "build:install-rust-targets": "ts-node-esm build.mts install-rust-targets",
    "build:install-rust-target": "ts-node-esm build.mts install-rust-target",
    "build:rust-target-manifest": "ts-node-esm build.mts rust-target-manifest",
    "build:rust-target-dir": "ts-node-esm build.mts rust-target-dir",
    "build:create-dist-folders": "ts-node-esm build.mts create-dist-folders",
    "build:build-node-binaries": "ts-node-esm build.mts build-node-binaries"
  },
  "devDependencies": {
    "@napi-rs/cli": "3.0.0-alpha.4",
    "@taplo/cli": "0.5.2",
    "@types/fs-extra": "11.0.1",
    "@types/node": "20.2.5",
    "@types/nunjucks": "3.2.2",
    "@typescript-eslint/eslint-plugin": "5.59.8",
    "@typescript-eslint/parser": "5.59.8",
    "benny": "3.7.1",
    "chalk": "5.2.0",
    "eslint": "8.42.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-prettier": "4.2.1",
    "fs-extra": "11.1.1",
    "husky": "8.0.3",
    "lint-staged": "13.2.2",
    "nunjucks": "3.2.4",
    "p-all": "5.0.0",
    "prettier": "2.8.8",
    "rimraf": "5.0.1",
    "ts-node": "10.9.1",
    "typescript": "5.1.3",
    "typescript-eslint": "0.0.1-alpha.0",
    "upath": "2.0.1"
  },
  "prettier": {
    "printWidth": 120,
    "semi": true,
    "trailingComma": "all",
    "singleQuote": true,
    "arrowParens": "always"
  }
}
